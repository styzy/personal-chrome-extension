$color-theme = #14a701

baseTrans(duration = 0.3s)
	transition all duration ease
baseAcf()
	&:after
		display block
		clear both
		content ''
		zoom 1
.pokemon-cheat-ctn
	position fixed
	right 0
	bottom 0
	left 0
	z-index 99999999
	height 50px
	// background-color rgba(255, 255, 255, 0.3)
	background-color rgba(51, 51, 51, 0.8)
	text-align center
	.btn
		baseTrans()

		display inline-block
		padding 0 20px
		height @height
		border none
		border-radius 4px
		background-color rgba(255, 255, 255, 0.4)
		color #FFFFFF
		text-align center
		font-size 16px
		line-height @height
		cursor pointer
		&:hover
			background-color $color-theme
			color #FFFFFF
		&.active
			background-color $color-theme
	.btn+.btn
		margin-left 1px
